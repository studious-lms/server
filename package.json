{
  "name": "@studious-lms/server",
  "version": "1.2.45",
  "description": "Backend server for Studious application",
  "main": "dist/exportType.js",
  "types": "dist/exportType.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/exportType.d.ts",
      "default": "./dist/exportType.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run sentry:sourcemaps",
    "start": "node dist/index.js",
    "generate": "npx prisma generate",
    "prepublishOnly": "npm run generate && npm run build",
    "test:pre": "NODE_ENV=test tsx scripts/test-pre-push.ts",
    "test": "npm run test:pre && NODE_ENV=test vitest",
    "test:run": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "db:seed": "tsx src/seedDatabase.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org studious-fp --project server ./dist && sentry-cli sourcemaps upload --org studious-fp --project server ./dist"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@pdf-lib/fontkit": "^1.1.1",
    "@prisma/client": "^6.7.0",
    "@sentry/cli": "^2.58.2",
    "@sentry/node": "^10.26.0",
    "@trpc/server": "^11.4.3",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.3",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.4",
    "openai": "^5.23.0",
    "pdf-lib": "^1.17.1",
    "prisma": "^6.7.0",
    "pusher": "^5.2.0",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "superjson": "^2.2.2",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "supertest": "^7.1.4",
    "trpc-ui": "^1.0.15",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
